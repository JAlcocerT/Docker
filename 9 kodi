https://hub.docker.com/r/linuxserver/kodi-headless/

cd /home/pi/Docker
mkdir kodi
cd kodi
mkdir config
cd /home/pi/Docker


cd docker-compose
vi docker-compose.yaml

  kodi:
    container_name: kodi
    image: linuxserver/kodi-headless
    restart: always
    environment:
      - PGID=1000
      - PUID=1000
      - TZ=America/Chicago
    volumes:
      - /home/adrian/kodi:/config/.kodi
    ports:
      - 8082:8080
      - 9090:9090
      - "9777:9777/udp"
      
     sudo docker-compose up -d
