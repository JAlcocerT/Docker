#Install Node Exporter:

sudo su
docker run -d   --net="host"   --pid="host"   -v "/:/host:ro,rslave"   quay.io/prometheus/node-exporter:latest   --path.rootfs=/host


#Create Prometheus Config:

#First create the proper folder:

cd /srv/
mkdir dev-disk-by-label-Files
cd /dev-disk-by-label-Files/
mkdir Config
cd /Config/
mkdir Prometheus
cd /Prometheus/

nano prometheus.yml

#Paste this code including your server IP (port remains the same):

global:
  scrape_interval: 5s
  external_labels:
    monitor: 'node'
scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['192.168.68.127:9090'] ## IP Address of the localhost
  - job_name: 'node-exporter'
    static_configs:
      - targets: ['192.168.68.127:9100'] ## IP Address of the localhost

#Install Prometheus:

docker run -d --name prometheus -p 9090:9090 -v /srv/dev-disk-by-label-Files/Config/Prometheus/prometheus.yml:/etc/prometheus/prometheus.yml prom/prometheus
