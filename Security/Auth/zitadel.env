# Zitadel Configuration
ZITADEL_DOMAIN=zitadel.localhost

# Database Configuration
POSTGRES_USER=zitadel
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=zitadel

# Zitadel Admin User
ZITADEL_ADMIN_USERNAME=admin
ZITADEL_ADMIN_EMAIL=admin@example.com
ZITADEL_ADMIN_PASSWORD=ChangeThisPassword123!

# Security - Generate a strong random string (at least 32 characters)
ZITADEL_MASTERKEY=$(openssl rand -base64 32)
ZITADEL_MACHINE_KEY=$(openssl rand -base64 32)

# Uncomment and configure SMTP if you want email notifications
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASSWORD=your-smtp-password
# SMTP_SENDER=noreply@${ZITADEL_DOMAIN}
