SYNCTHING:

#with portainer:
https://www.youtube.com/watch?v=rztoXXJ4y0I&t=61s

https://hub.docker.com/r/linuxserver/syncthing

#with docker compose:
https://raw.githubusercontent.com/reisikei/docker/main/Backups/Syncthing%20-%20docker%20compose.yml
vim docker-compose.yaml
sudo docker-compose up -d

---
version: "2.1"
services:
  syncthing:
    image: ghcr.io/linuxserver/syncthing
    container_name: syncthing
    hostname: syncthing #optional
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Warsaw
    volumes:
      - /home/julka/Docker/Syncthing/config:/config
      - /home/julka/Downloads/Phone SYNC:/data1
    ports:
      - 8384:8384
      - 22000:22000/tcp
      - 22000:22000/udp
      - 21027:21027/udp
    restart: unless-stopped
